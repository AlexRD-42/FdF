{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Executable",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",  // <-- your executable name
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb"  // Change if using lldb or on macOS
    }
  ]
}
